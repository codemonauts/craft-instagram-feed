{% import "_includes/forms" as forms %}

{{ forms.textField({
    label: "Username"|t("instagramfeed"),
    id: 'instagramUser',
    name: 'instagramUser',
    instructions: "Please, enter your Instagram username."|t("instagramfeed"),
    value: settings.instagramUser,
    type: 'text',
    required: true
}) }}

{% if settings.useProxy %}
    {% if settings.proxyKey == "" %}
    <p style="color: red;">{{ "Proxy usage is enabled but the proxy key is empty, so the proxy will not be used." }}</p>
    {% else %}
    <p style="color: green;">{{ "Proxy will be used." }}</p>
    {% endif %}
{% endif %}

<p>{{ "Make sure the entered Instagram user profile is not private."|t("instagramfeed") }}</p>
